{
  "info": {
    "name": "Simple Procurement System - Testing",
    "_postman_id": "9f8a7b6c-1234-4abc-9def-987654321000",
    "description": "Postman Collection untuk pengujian backend Simple Procurement System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://localhost:3000/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\",\n  \"role\": \"admin\"\n}"
        }
      }
    },
    {
      "name": "2. Login (Save JWT Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var res = pm.response.json();",
              "pm.collectionVariables.set(\"token\", res.token);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://localhost:3000/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
        }
      }
    },
    {
      "name": "3. Create Item",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/items",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "items"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laptop\",\n  \"stock\": 10,\n  \"price\": 15000000\n}"
        }
      }
    },
    {
      "name": "4. Create Supplier",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/suppliers",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "suppliers"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"PT Sumber Makmur\",\n  \"email\": \"supplier@email.com\",\n  \"address\": \"Jakarta\"\n}"
        }
      }
    },
    {
      "name": "5. Create Purchasing (INTI TES)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/purchasings",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "purchasings"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"supplier_id\": 1,\n  \"items\": [\n    { \"item_id\": 1, \"qty\": 2 }\n  ]\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}
